{
  "rules": [
    {
      "name": "brute_force",
      "conditions": {
        "all": [
          {
            "field": "alert.type",
            "operator": "equals",
            "value": "Brute Force"
          },
          {
            "field": "alert.event_count",
            "operator": "greater_than",
            "value": 10
          }
        ]
      },
      "actions": [
        {
          "action": "firewall.block_ip"
        }
      ],
      "mitre": [
        "T1110"
      ]
    },
    {
      "name": "malware_quarantine",
      "conditions": {
        "all": [
          {
            "field": "alert.type",
            "operator": "equals",
            "value": "Malware"
          },
          {
            "field": "alert.severity",
            "operator": "equals",
            "value": "High"
          }
        ]
      },
      "actions": [
        {
          "action": "isolate_host",
          "params": {
            "host_field": "machine"
          }
        },
        {
          "action": "create_ticket",
          "params": {
            "priority": "high"
          }
        }
      ],
      "mitre": [
        "T1204"
      ]
    }
  ]
}
